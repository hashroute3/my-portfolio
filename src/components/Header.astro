---
const currentPath = Astro.url.pathname;
const navItems = [
  { href: '/#experience', label: 'journey' },
  { href: '/blog/', label: 'thoughts' },
  { href: '/give-back/', label: 'give-back' },
  { href: '/skills/', label: 'skills' },
  { href: '/ai/', label: 'ai' },
  { href: '/contact/', label: 'contact' },
];
---

<header class="sticky top-0 z-50 border-b border-surface-800/80 bg-surface-950/90 backdrop-blur-sm">
  <nav class="mx-auto flex max-w-3xl items-center justify-end gap-6 px-6 py-4" aria-label="Main navigation">
    <ul class="flex items-center gap-6">
      {navItems.map((item) => {
        const isExternal = item.href.startsWith('http') || item.href.startsWith('#');
        const isActive = !isExternal && (currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href)));
        return (
          <li>
            <a
              href={item.href}
              class:list={[
                'text-sm font-medium transition-colors',
                isActive ? 'text-sky-400' : 'text-surface-400 hover:text-surface-100',
              ]}
            >
              {item.label}
            </a>
          </li>
        );
      })}
    </ul>
  </nav>
</header>
