---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const talks = (await getCollection('talks')).sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
const typeLabels: Record<string, string> = {
  talk: 'Talk',
  keynote: 'Keynote',
  workshop: 'Workshop',
  panel: 'Panel',
  poster: 'Poster',
};
---

<BaseLayout title="Talks & Community" description="Conference talks, judging roles, peer reviews, and academic service.">
  <article class="mx-auto max-w-5xl px-6 py-16">
    <header>
      <h1 class="font-serif text-3xl font-semibold text-surface-50">Talks & Community</h1>
      <p class="mt-2 text-surface-400">Conference talks, judging, peer reviews, and volunteering.</p>
    </header>

    <ul class="mt-12 space-y-6" role="list">
      {talks.map((entry) => (
        <li class="rounded-xl border border-surface-800 bg-surface-900/50 p-6 transition-colors hover:border-surface-700">
          <div class="flex flex-wrap items-start justify-between gap-4">
            <div>
              <h2 class="font-serif text-lg font-semibold text-surface-50">{entry.data.title}</h2>
              <p class="mt-1 text-sm text-surface-400">
                {entry.data.event}
                {entry.data.location && ` · ${entry.data.location}`}
              </p>
              <p class="mt-1 text-sm text-surface-500">
                <time datetime={entry.data.date.toISOString()}>
                  {entry.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                </time>
                <span class="mx-2">·</span>
                <span class="rounded bg-surface-800 px-1.5 py-0.5 text-xs text-surface-400">
                  {typeLabels[entry.data.type] ?? entry.data.type}
                </span>
              </p>
            </div>
            {entry.data.url && (
              <a href={entry.data.url} class="text-sm text-sky-400 hover:underline" target="_blank" rel="noopener">
                Link
              </a>
            )}
          </div>
        </li>
      ))}
    </ul>

    {talks.length === 0 && (
      <p class="mt-12 text-surface-500">
        No talks yet. Add markdown in <code class="rounded bg-surface-800 px-1.5 py-0.5">src/content/talks/</code> or describe judging, peer reviews, and volunteering below.
      </p>
    )}

    <section class="mt-16">
      <h2 class="font-serif text-xl font-semibold text-surface-100">Judging & Peer Review</h2>
      <p class="mt-2 text-surface-400">[List conference/committee reviewing, program committees, etc.]</p>
    </section>
    <section class="mt-8">
      <h2 class="font-serif text-xl font-semibold text-surface-100">Academic Service</h2>
      <p class="mt-2 text-surface-400">[Volunteering, open-source, community work.]</p>
    </section>
  </article>
</BaseLayout>
