---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => !data.draft && !data.externalUrl);
  return posts.map((entry) => ({ params: { slug: entry.slug }, props: { entry } }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const readingTime = Math.max(1, Math.ceil((entry.body.length / 1000) * 2));
---

<BaseLayout title={entry.data.title} description={entry.data.description} type="article">
  <article class="mx-auto max-w-3xl px-6 py-16">
    <header>
      <h1 class="font-serif text-3xl font-semibold text-surface-50">{entry.data.title}</h1>
      <p class="mt-2 text-sm text-surface-400">
        <time datetime={entry.data.publishDate.toISOString()}>
          {entry.data.publishDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
        </time>
        <span class="mx-2">·</span>
        <span>{readingTime} min read</span>
        {entry.data.author && (
          <>
            <span class="mx-2">·</span>
            <span>{entry.data.author}</span>
          </>
        )}
      </p>
      {entry.data.tags.length > 0 && (
        <div class="mt-3 flex flex-wrap gap-2">
          {entry.data.tags.map((tag) => (
            <a
              href={`/blog/tag/${tag.toLowerCase().replace(/\s+/g, '-')}/`}
              class="rounded bg-surface-800 px-1.5 py-0.5 text-xs text-surface-400 hover:text-sky-400"
            >
              {tag}
            </a>
          ))}
        </div>
      )}
    </header>
    <div class="prose prose-invert prose-lg mt-8 max-w-none">
      <Content />
    </div>
  </article>
</BaseLayout>
