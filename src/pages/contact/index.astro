---
import BaseLayout from '../../layouts/BaseLayout.astro';
import SocialIcon from '../../components/SocialIcon.astro';
import { site, social } from '../../data/profile';
---

<BaseLayout title="Contact" description={`Get in touch with ${site.name}.`}>
  <article class="mx-auto max-w-3xl px-6 py-16">
    <header>
      <h1 class="font-serif text-3xl font-semibold text-surface-50">Contact</h1>
      <p class="mt-2 text-surface-400">Get in touch or find me elsewhere.</p>
    </header>

    <section class="mt-10">
      <h2 class="font-serif text-xl font-semibold text-surface-100">Links</h2>
      <ul class="mt-4 flex flex-wrap gap-5">
        {social.map((link) => (
          <li>
            <a
              href={link.href}
              class="inline-flex items-center gap-2 text-sky-400 hover:underline"
              target={link.href.startsWith('http') || link.href.startsWith('mailto:') ? '_blank' : undefined}
              rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
              aria-label={link.label}
            >
              <SocialIcon name={link.icon} />
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </section>

    <section class="mt-10">
      <h2 class="font-serif text-xl font-semibold text-surface-100">Send a message</h2>
      <form name="contact" method="POST" data-netlify="true" netlify-honeypot="bot" class="mt-4 space-y-4">
        <input type="hidden" name="form-name" value="contact" />
        <p class="hidden">
          <label>Don't fill this out: <input name="bot" /></label>
        </p>
        <div>
          <label for="name" class="block text-sm font-medium text-surface-300">Name</label>
          <input type="text" id="name" name="name" required class="mt-1 w-full rounded-lg border border-surface-700 bg-surface-900 px-3 py-2 text-surface-100 focus:border-sky-500 focus:outline-none focus:ring-1 focus:ring-sky-500" />
        </div>
        <div>
          <label for="email" class="block text-sm font-medium text-surface-300">Email</label>
          <input type="email" id="email" name="email" required class="mt-1 w-full rounded-lg border border-surface-700 bg-surface-900 px-3 py-2 text-surface-100 focus:border-sky-500 focus:outline-none focus:ring-1 focus:ring-sky-500" />
        </div>
        <div>
          <label for="message" class="block text-sm font-medium text-surface-300">Message</label>
          <textarea id="message" name="message" rows="4" required class="mt-1 w-full rounded-lg border border-surface-700 bg-surface-900 px-3 py-2 text-surface-100 focus:border-sky-500 focus:outline-none focus:ring-1 focus:ring-sky-500"></textarea>
        </div>
        <button type="submit" class="rounded-lg bg-sky-600 px-4 py-2 text-sm font-medium text-white transition-colors hover:bg-sky-500">
          Send
        </button>
      </form>
    </section>
  </article>
</BaseLayout>
